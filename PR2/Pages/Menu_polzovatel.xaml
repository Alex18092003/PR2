<Page x:Class="PR2.Menu_polzovatel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu_polzovatel">

    <Grid Background="#19BF0F74">
        <Grid.RowDefinitions>
            <RowDefinition>
            </RowDefinition>
            <RowDefinition Height="5*">
            </RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Template ="{StaticResource btnResourse}" Name="btnBack" Click="btnBack_Click">
                <Button.ToolTip>
                    <ToolTip>
                        Выход в меню авторизации
                    </ToolTip>
                </Button.ToolTip>
                <Button.OpacityMask>
                    <ImageBrush ImageSource="/Resourse/home_heart_building_icon_207747.png"/>
                </Button.OpacityMask>
            </Button>
            <TextBlock  Style="{StaticResource block}">Меню пользователя</TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <Button Template="{StaticResource btnResoursee}" Click="buttonCabinet_Click" Name="buttonCabinet">
                <Button.ToolTip>
                    <ToolTip>Переход в личный кабинет</ToolTip> 
                </Button.ToolTip>
                <Button.OpacityMask>
                    <ImageBrush ImageSource="/Resourse/account_avatar_face_man_people_profile_user_icon_123197.png"></ImageBrush>
                </Button.OpacityMask>
            </Button>
        </StackPanel>
    </Grid>
</Page>
