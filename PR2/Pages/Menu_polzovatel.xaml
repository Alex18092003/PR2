<Page x:Class="PR2.Menu_polzovatel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR2"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="800"
      Title="Menu_polzovatel">

    <Grid Background="#19BF0F74">
        <Grid.RowDefinitions>  
            <RowDefinition>
            </RowDefinition>
            <RowDefinition Height="6*">
            </RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Template ="{StaticResource btnResourse}" Name="btnBack" Click="btnBack_Click">
                <Button.ToolTip>
                    <ToolTip>
                        Выход в меню авторизации
                    </ToolTip>
                </Button.ToolTip>
                <Button.OpacityMask>
                    <ImageBrush ImageSource="/Resourse/home_heart_building_icon_207747.png"/>
                </Button.OpacityMask>
            </Button>
            <TextBlock  Style="{StaticResource block}">Личный кабинет</TextBlock>
        </StackPanel>
        
        <ScrollViewer Grid.Row="1">
            <Border  Margin="50,10,50,10" Padding="5" CornerRadius="5" BorderThickness="1"  BorderBrush="#FFBF0F74">
                <StackPanel  Orientation="Vertical">
                    <Image Height="170" Width="170" Name="imUser" Source="/Resourse/b128868d950f8815390959a28ae6da61.jpg"></Image>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Name="buttonNewPhoto" Click="buttonNewPhoto_Click">Новое фото</Button>
                     <Button Name="buttonFewPhotos" Click="buttonFewPhotos_Click">Добавить несколько фото</Button>
                        <Button Name="buttonOldPhoto" Click="buttonOldPhoto_Click">Изменить фото на старое</Button>
                    </StackPanel>
                        <StackPanel Name="Gallery" Visibility="Collapsed" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Name="Back" Click="Back_Click" IsEnabled="False">Назад</Button>
                        <Image Height="150" Width="150" Name="imgUser"></Image>
                        <Button Name="Next" Click="Next_Click">Вперед</Button>
                    </StackPanel>
                    <Button Name="btnOld" Click="btnOld_Click">Изменить фото на выбранное</Button>



                    <TextBlock Style="{StaticResource tbList}">Имя:</TextBlock>
                    <TextBox IsReadOnly="True" Name="textboxName"></TextBox>
            <TextBlock Style="{StaticResource tbList}">Фамилия:</TextBlock>
                    <TextBox IsReadOnly="True" Name="textboxSurname"></TextBox>
            <TextBlock Style="{StaticResource tbList}">Отчество:</TextBlock>
                    <TextBox IsReadOnly="True" Name="textboxPatronymic"></TextBox>
                    <StackPanel Orientation="Horizontal">
                        <Button Template="{StaticResource btnPink}" Margin="0,20,0,0" Name="buttonChange" Click="buttonChange_Click">Изменить данные</Button>
                        <Button Template="{StaticResource btnPink}" Margin="0,20,0,0" Name="buttonPassword" Click="buttonPassword_Click">Изменить пароль</Button>
                    </StackPanel>
           

                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>
