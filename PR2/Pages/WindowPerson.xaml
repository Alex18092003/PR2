<Window x:Class="PR2.Pages.WindowPerson"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR2.Pages"
        mc:Ignorable="d"
        Title="WindowPerson" Height="450" Width="800">
    <Grid Background="#19BF0F74">
        <StackPanel>
            <TextBlock Style="{StaticResource tbList}" HorizontalAlignment="Center">Введите новые данные</TextBlock>
            <TextBlock Style="{StaticResource tbList}">Имя:</TextBlock>
            <TextBox Name="textboxName"></TextBox>
            <TextBlock Style="{StaticResource tbList}">Фамилия:</TextBlock>
            <TextBox Name="textboxSurname"></TextBox>
            <TextBlock Style="{StaticResource tbList}">Отчество:</TextBlock>
            <TextBox Name="textboxPatronymic"></TextBox>
            <Button Template="{StaticResource btnPink}" Margin="0,50,0,0" Name="buttonSave" Click="buttonSave_Click">Сохранить изменения</Button>
        </StackPanel>
    </Grid>
</Window>
