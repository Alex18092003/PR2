<Window x:Class="PR2.Pages.WindowPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR2.Pages"
        mc:Ignorable="d"
        Title="WindowPassword" Height="300" Width="500">
    <Grid Background="#19BF0F74">
        <StackPanel Margin="20,10,20,0">
            <TextBlock Style="{StaticResource tbList}" HorizontalAlignment="Center">Введите новый пароль/логин</TextBlock>
            <TextBlock Style="{StaticResource tbList}">Логин:</TextBlock>
            <TextBox Style="{StaticResource tbBox}"  Name="textLogin"></TextBox>
            <TextBlock Style="{StaticResource tbList}">Пароль:</TextBlock>
            <TextBox Style="{StaticResource tbBox}"  Name="textPassword"></TextBox>
            <Button Template="{StaticResource btnPink}" Margin="0,50,0,0" Name="buttonSave" Click="buttonSave_Click" >Сохранить изменения</Button>
        </StackPanel>
    </Grid>
</Window>
